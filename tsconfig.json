{
    "compilerOptions": {
        "outDir": "dist/main",
        "module": "esnext",
        "target": "es2018",
        "moduleResolution": "node",
        "esModuleInterop": true,
        "experimentalDecorators": true,
        "skipLibCheck": true,
        "baseUrl": ".",
        "paths": {
            "~/*": ["./src/renderer/*"],
            "@/*": ["./src/renderer/*"],
            "@@/*": ["./src/main/*"],
        },
        "types": ["@types/node", "@nuxt/types"]
    },
    "exclude": [
        "node_modules",
        "./node_modules",
        "./node_modules/*",
    ]
}
